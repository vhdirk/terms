{
    "id" : "io.github.vhdirk.Terms.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm16"
    ],
    "command" : "terms",
    "finish-args" : [
        "--allow=devel",
        "--filesystem=home",
        "--filesystem=host",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.freedesktop.Flatpak",
        "--env=RUST_LOG=terms=debug",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/llvm16/bin:/usr/lib/sdk/rust-stable/bin",
        "append-ld-library-path" : "/usr/lib/sdk/llvm16/lib",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_LINKER" : "clang",
            "CARGO_REGISTRIES_CRATES_IO_PROTOCOL" : "sparse",
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_RUSTFLAGS" : "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold --cfg=ruma_identifiers_storage=\"Arc\"",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_LINKER" : "clang",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_RUSTFLAGS" : "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold --cfg=ruma_identifiers_storage=\"Arc\""
        },
        "test-args" : [
            "--socket=x11",
            "--share=network"
        ]
    },
    "modules" : [
        {
            "name": "vte",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release",
                "-Dgtk3=false",
                "-Dgtk4=true",
                "-Dglade=false",
                "-Dgir=false",
                "-Dvapi=false",
                "-Dsixel=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/vte.git",
                    "branch": "master"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0001-Add-sequences-and-signals-for-desktop-notification.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0002-vte.sh-Emit-OSC-777-from-PROMPT_COMMAND.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0003-Test-the-notification-received-signal.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0004-Support-preexec-notifications-from-an-interactive-sh.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0005-Test-the-shell-preexec-signal.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0006-Support-precmd-notifications-from-an-interactive-she.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0007-Test-the-shell-precmd-signal.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0008-Support-tracking-the-active-container-inside-the-ter.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0009-expose-notification-shellcmd-containers-to-GTK-4.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/Allow-background-color-and-color-on-VteTerminal-widgets-t.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/widget-a11y-Add-missing-text-changes-on-scrolling-with-mo.patch"
                }
            ]
        },
        {
            "name": "terms",
            "buildsystem": "meson",
            "run-tests": true,
            "config-opts": ["-Dprofile=development"],
            "builddir": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}
