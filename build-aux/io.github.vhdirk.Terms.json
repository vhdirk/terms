{
    "id": "io.github.vhdirk.Terms",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "terms",
    "finish-args": [
        "--filesystem=home",
        "--filesystem=host",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": ["--share=network"],
        "env": {
            "CARGO_HOME": "/run/build/terms/cargo"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "vte",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release",
                "-Dgtk3=false",
                "-Dgtk4=true",
                "-Dglade=false",
                "-Dgir=false",
                "-Dvapi=false",
                "-Dsixel=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/vte.git",
                    "branch": "master"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0001-Add-sequences-and-signals-for-desktop-notification.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0002-vte.sh-Emit-OSC-777-from-PROMPT_COMMAND.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0003-Test-the-notification-received-signal.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0004-Support-preexec-notifications-from-an-interactive-sh.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0005-Test-the-shell-preexec-signal.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0006-Support-precmd-notifications-from-an-interactive-she.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0007-Test-the-shell-precmd-signal.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0008-Support-tracking-the-active-container-inside-the-ter.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/0009-expose-notification-shellcmd-containers-to-GTK-4.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/Allow-background-color-and-color-on-VteTerminal-widgets-t.patch"
                },
                {
                    "type": "patch",
                    "path": "../build-aux/vte/widget-a11y-Add-missing-text-changes-on-scrolling-with-mo.patch"
                }
            ]
        },
        {
            "name": "terms",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "branch": "release",
                    "url": "https://github.com/vhdirk/terms.git"
                }
            ]
        }
    ]
}
